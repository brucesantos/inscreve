<!doctype html>
<html lang="pt">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Sistema Inscreve da FGV Conhecimento, para inscrições em concursos">
  <title>Inscreve - FGV Conhecimento</title>
  <link href="styles/main.css" rel="stylesheet">
</head>

<body class="bg-light">

  <main class="container">

    <section class="h-100">
      <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
          <div class="col-lg-6 col-md-7 col-sm-9">
            <div class="text-center my-5">
              <img src="images/logo-fgv-conhecimento.svg" alt="logo">
            </div>

            <form method="POST" class="needs-validation" novalidate="" autocomplete="off"></form>

              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h1 class="fs-4 card-title fw-bold mb-4">Cadastro</h1>
                  <p><span class="text-danger">*</span> <span class="opacity-75">Campos obrigatórios</span></p>
                  <!-- @import "cpf" -->
                  <div class="mb-3">
                    <label for="name" class="form-label">Nome completo</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="João Exemplo da Silva"
                      required>
                    <div class="invalid-feedback">
                      Por favor, informe seu nome completo.
                    </div>
                  </div>
                  <!-- @import nascimento -->
                </div>
                <div class="card-footer py-3 border-0">
                  <div class="text-center">
                    Já tem uma conta? <a href="index.html" class="text-dark">Entre</a>
                  </div>
                </div>
              </div>

              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Dados Familiares</h4>
                  <!-- @import filhos -->
                  <div class="mb-3">
                    <label for="motherName" class="form-label">Nome completo da mãe</label>
                    <input type="text" class="form-control" id="motherName" name="motherName" placeholder="Maria Exemplo da Silva">
                    <div class="form-text opacity-75">Deixe em branco caso não conste no seu documento.</div>
                  </div>
                  <div class="mb-3">
                    <label for="fatherName" class="form-label">Nome completo do pai</label>
                    <input type="text" class="form-control" id="fatherName" name="fatherName" placeholder="José Exemplo da Silva">
                    <div class="form-text">Deixe em branco caso não conste no seu documento.</div>
                  </div>
                </div>
              </div>

              <!-- Seção Documento (RG) -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Documento (RG)</h4>
                  <div class="mb-3">
                    <label for="rg" class="form-label">Nº do RG</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="rg" name="rg" placeholder="00.000.000" required inputmode="numeric">
                        <span class="input-group-text">Dígito</span>
                        <input type="text" class="form-control" id="rgDigit" name="rgDigit" placeholder="0" style="max-width: 50px;">
                    </div>
                    <div class="invalid-feedback">
                      Por favor, informe o número do RG.
                  </div>
                  </div>
                  <script>
                    document.getElementById('rg').addEventListener('input', function (e) {
                      var value = e.target.value;
                      value = value.replace(/\D/g, ""); // Remove all non-numeric characters
                      if (value.length > 8) {
                        value = value.slice(0, 8); // Limit the length to 8 digits
                      }
                      value = value.replace(/(\d{2})(\d)/, "$1.$2"); // Add a dot after the second digit
                      value = value.replace(/(\d{2}).(\d{3})(\d)/, "$1.$2.$3"); // Add a dot after the fifth digit
                      e.target.value = value;
                    });
                  </script>
                  <!-- Órgão Emissor -->
                  <div class="mb-3">
                    <label for="issuingBody" class="form-label">Órgão Emissor</label>
                    <select class="form-select" id="issuingBody" name="issuingBody" required>
                      <option selected disabled value="">Escolher</option>
                      <option value="ssp">SSP - Secretaria de Segurança Pública</option>
                      <option value="pm">PM - Polícia Militar</option>
                      <option value="pc">PC - Policia Civil</option>
                      <option value="cnt">CNT - Carteira Nacional de Habilitação</option>
                      <option value="dic">DIC - Diretoria de Identificação Civil</option>
                      <option value="ctps">CTPS - Carteira de Trabaho e Previdência Social</option>
                      <option value="fgts">FGTS - Fundo de Garantia do Tempo de Serviço</option>
                      <option value="ifp">IFP - Instituto Félix Pacheco</option>
                      <option value="ipf">IPF - Instituto Pereira Faustino</option>
                      <option value="iml">IML - Instituto Médico-Legal</option>
                      <option value="mte">MTE - Ministério do Trabalho e Emprego</option>
                      <option value="mma">MMA - Ministério da Marinha</option>
                      <option value="mae">MAE - Ministério da Aeronáutica</option>
                      <option value="mex">MEX - Ministério do Exército</option>
                      <option value="pof">POF - Polícia Federal</option>
                      <option value="pom">POM - Polícia Militar</option>
                      <option value="ses">SES - Carteira de Estrangeiro</option>
                      <option value="sjs">SJS - Secretaria da Justiça e Segurança</option>
                      <option value="sjts">SJTS - Secretaria da Justiça do Trabalho e Segurança</option>
                    </select>
                  </div>
                  <!-- UF do Órgão Emissor -->
                  <div class="mb-3">
                    <label for="issuingState" class="form-label">UF (estado) do Órgão Emissor</label>
                    <select class="form-select" id="issuingState" name="issuingState" required>
                      <!-- @import estadosbrasileiros -->
                    </select>
                  </div>
                  <!-- Data de Emissão -->
                  <div class="mb-3">
                    <label for="issueDate" class="form-label">Data de Emissão</label>
                    <input type="text" class="form-control" id="issueDate" name="issueDate" placeholder="DD/MM/AAAA" inputmode="numeric" required>
                    <div class="invalid-feedback">
                        Por favor, informe a data de emissão.
                    </div>
                  </div>
                  <script>
                      const issueDateInput = document.getElementById('issueDate');
                      issueDateInput.addEventListener('input', function (e) {
                          e.target.value = e.target.value.replace(/[^0-9]/g, '');
                          if (e.target.value.length > 2) {
                              e.target.value = `${e.target.value.slice(0, 2)}/${e.target.value.slice(2)}`;
                          }
                          if (e.target.value.length > 5) {
                              e.target.value = `${e.target.value.slice(0, 5)}/${e.target.value.slice(5, 9)}`;
                          }
                      });
                  </script>
                </div>
              </div>

              <!-- Seção Origem -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Origem</h4>
                  <!-- @import naturalidade -->
                  <!-- Sexo -->
                  <div class="mb-3">
                    <label for="sex" class="form-label">Sexo</label>
                    <select class="form-select" id="sex" name="sex" required>
                      <option selected disabled value="">Escolher</option>
                      <option value="masculino">Masculino</option>
                      <option value="feminino">Feminino</option>
                      <!-- Adicionar outras opções se necessário -->
                    </select>
                  </div>
                  <!-- Cor/Raça -->
                  <div class="mb-3">
                    <label for="race" class="form-label">Cor/Raça</label>
                    <select class="form-select" id="race" name="race" required>
                      <option selected disabled value="">Escolher</option>
                      <option value="amarela">Amarela</option>
                      <option value="branca">Branca</option>
                      <option value="indigena">Indígena</option>
                      <option value="parda">Parda</option>
                      <option value="preta">Preta</option>
                      <option value="nao_desejo_informar">Não desejo informar</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Seção Informações Pessoais -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Informações Pessoais</h4>
                  <!-- Estado Civil -->
                  <div class="mb-3">
                    <label for="maritalStatus" class="form-label">Estado Civil</label>
                    <select class="form-select" id="maritalStatus" name="maritalStatus" required>
                      <option selected disabled value="">Escolher</option>
                      <option value="casado">Casado</option>
                      <option value="divorciado">Divorciado</option>
                      <option value="separado_judicialmente">Separado judicialmente</option>
                      <option value="solteiro">Solteiro</option>
                      <option value="viuvo">Viúvo</option>
                    </select>
                  </div>
                  <!-- @import escolaridade -->
                  <!-- Membro Adventista do Sétimo Dia? -->
                  <div class="mb-3">
                    <label for="seventhDayAdventist" class="form-label">Membro Adventista do Sétimo Dia?</label>
                    <div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="adventistNo" name="seventhDayAdventist" value="Não" checked>
                        <label class="form-check-label" for="adventistNo">Não</label>
                      </div>
                      <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="adventistYes" name="seventhDayAdventist" value="Sim">
                        <label class="form-check-label" for="adventistYes">Sim</label>
                      </div>
                    </div>
                    <div class="form-text opacity-75">Considerando a possibilidade de alguma das etapas serem realizadas em um dia de sábado.</div>
                  </div>
                </div>
              </div>

              <!-- Seção Endereço -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Endereço</h4>
                  <!-- @import endereco -->
                </div>
              </div>

              <!-- Seção Contato -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Dados para Contato</h4>
                  <div id="telefones">
                    <div class="mb-3">
                      <label for="phone1" class="form-label">Telefone 1</label>
                      <input type="tel" class="form-control" id="phone1" name="phone1" placeholder="(00) 00000-0000" inputmode="numeric" required>
                    </div>
                    <div class="mb-3">
                      <label for="phone2" class="form-label">Telefone 2</label>
                      <input type="tel" class="form-control" id="phone2" name="phone2" placeholder="(00) 00000-0000" inputmode="numeric">
                    </div>
                    <div class="mb-3">
                      <label for="phone3" class="form-label">Telefone 3</label>
                      <input type="tel" class="form-control" id="phone3" name="phone3" placeholder="(00) 00000-0000" inputmode="numeric">
                    </div>
                  </div>
                  <script>
                    ['phone1', 'phone2', 'phone3'].forEach(function(id) {
                      document.getElementById(id).addEventListener('keyup', function(e) {
                        var phone = e.target.value.replace(/\D/g, ''); // Remove all non-numeric characters
                        if (phone.length > 11) {
                          phone = phone.slice(0, 11); // Limit to 11 characters
                        }
                        phone = phone.replace(/^(\d{2})(\d{5})(\d{4})/, '($1) $2-$3'); // Format as (00) 00000-0000
                        e.target.value = phone;
                      });
                    });
                  </script>
                  <div id="emails">
                    <div class="mb-3">
                      <label for="email" class="form-label">E-mail</label>
                      <input type="email" class="form-control" id="email" name="email" placeholder="seu@email.com" required>
                    </div>
                    <div class="mb-3">
                      <label for="emailRepeat" class="form-label">E-mail</label>
                      <input type="email" class="form-control" id="emailRepeat" name="emailRepeat" placeholder="seu@email.com" required>
                      <div class="form-text opacity-75">Você receberá uma mensagem no endereço cadastrado para confirmar o seu Email.</div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Seção Acesso -->
              <div class="card shadow-lg mb-4">
                <div class="card-body p-4">
                  <h4 class="fs-4 card-title fw-bold mb-4">Acesso e confirmação</h4>
                  <div class="mb-3">
                    <label class="form-label" for="password">Senha</label>
                    <!-- @import senha -->
                    <div class="form-text opacity-75">
                      A sua senha deve conter pelo menos:
                      <ul>
                        <li>1 letra maiúscula</li>
                        <li>1 minúscula</li>
                        <li>1 número</li>
                        <li>1 caractere especial</li>
                      </ul>
                    </div>
                    <div class="invalid-feedback">
                      A Senha não segue os critérios de segurança.
                    </div>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="termsOfService" required>
                    <label class="form-check-label" for="termsOfService">
                      Eu aceito os <a href="termos.html">termos de uso</a>.
                    </label>
                    <div class="invalid-feedback">
                      Você precisa aceitar para prosseguir.
                    </div>
                  </div>
                  <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="newsletterSubscription">
                    <label class="form-check-label" for="newsletterSubscription">
                      Eu autorizo o envio de notícias e informativos sobre novos concursos para meu email.
                    </label>
                  </div>
                  <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                      Cadastrar
                    </button>
                  </div>
                </div>
              </div>

            </form>
            <!-- @import "versao" -->
          </div>
        </div>
      </div>
    </section>

  </main>

  <!-- scripts -->
  <script src="js/bootstrap.js"></script>

  <script>
    // Add * after the label for every required input field
    document.addEventListener('DOMContentLoaded', function() {
      // Get all required input and select elements
      var requiredInputs = document.querySelectorAll('input[required], select[required]');
      
      // Loop through each required input/select element
      requiredInputs.forEach(function(input) {
        // Get the label for this input/select
        var label = document.querySelector('label[for="' + input.id + '"]');
        
        // If a label was found, add an asterisk to its text
        if (label) {
          label.innerHTML += ' <span class="text-danger">*</span>';
        }
      });
    });

    // Add the .unselected class to all .form-select elements para que eu possa estilizar o select placeholder
    window.onload = function() {
      // Get all .form-select elements
      var selects = document.querySelectorAll('.form-select');

      // Loop through each select element
      selects.forEach(function(select) {
        // Skip the select with id 'nationality'
        if (select.id !== 'nationality') {
          // Add the .unselected class
          select.classList.add('unselected');

          // Add an event listener for the change event
          select.addEventListener('change', function() {
            // When an option is selected, remove the .unselected class
            this.classList.remove('unselected');
          });
        }
      });
    };
  </script>

</body>

</html>