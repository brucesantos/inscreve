<!doctype html>
<html lang="pt">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Sistema Inscreve da FGV Conhecimento, para inscrições em concursos">
  <title>Inscreve - FGV Conhecimento</title>
  <link href="styles/main.css" rel="stylesheet">
</head>

<body class="bg-light">

  <main class="container">

    <section class="h-100">
      <div class="container h-100">
        <div class="row justify-content-sm-center h-100">
          <div class="col-lg-6 col-md-7 col-sm-9">
            <div class="text-center my-5">
              <img src="images/logo-fgv-conhecimento.svg" alt="logo">
            </div>

            <form method="POST" class="needs-validation" novalidate="" autocomplete="off"></form>

            <div class="card shadow-lg mb-4">
              <div class="card-body p-4">
                <h1 class="fs-4 card-title fw-bold mb-4">Cadastro</h1>
                <p>* Campos obrigatórios</p>
                <!-- @import "cpf" -->
                <div class="mb-3">
                  <label for="name" class="form-label">Nome completo</label>
                  <input type="text" class="form-control" id="name" name="name" placeholder="João Exemplo da Silva"
                    required>
                  <div class="invalid-feedback">
                    Por favor, informe seu nome completo.
                  </div>
                </div>
                <!-- @import nascimento -->
              </div>
              <div class="card-footer py-3 border-0">
                <div class="text-center">
                  Já tem uma conta? <a href="index.html" class="text-dark">Entre</a>
                </div>
              </div>
            </div>

            <div class="card shadow-lg mb-4">
              <div class="card-body p-4">
                <h4 class="fs-4 card-title fw-bold mb-4">Dados Familiares</h4>
                <!-- @import filhos -->
                <div class="mb-3">
                  <label for="motherName" class="form-label">Nome completo da mãe</label>
                  <input type="text" class="form-control" id="motherName" name="motherName" placeholder="Maria Exemplo da Silva">
                  <div class="form-text opacity-75">Deixe em branco caso não conste no seu documento.</div>
                </div>
                <div class="mb-3">
                  <label for="fatherName" class="form-label">Nome completo do pai</label>
                  <input type="text" class="form-control" id="fatherName" name="fatherName" placeholder="José Exemplo da Silva">
                  <div class="form-text">Deixe em branco caso não conste no seu documento.</div>
                </div>
              </div>
            </div>

                  <!-- Seção Documento (RG) -->
            <div class="card shadow-lg mb-4">
              <div class="card-body p-4">
                <h4 class="fs-4 card-title fw-bold mb-4">Documento (RG)</h4>
                <!-- Número do RG -->
                <div class="mb-3">
                  <label for="rg" class="form-label">Nº do RG / Dígito</label>
                  <input type="text" class="form-control" id="rg" name="rg" placeholder="00.000.000-0" required inputmode="numeric">
                </div>
                <!-- Órgão Emissor -->
                <div class="mb-3">
                  <label for="issuingBody" class="form-label">Órgão Emissor</label>
                  <select class="form-select" id="issuingBody" name="issuingBody" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de órgãos emissores aqui -->
                  </select>
                </div>
                <!-- UF do Órgão Emissor -->
                <div class="mb-3">
                  <label for="issuingState" class="form-label">UF do Órgão Emissor</label>
                  <select class="form-select" id="issuingState" name="issuingState" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de UF aqui -->
                  </select>
                </div>
                <!-- Data de Emissão -->
                <div class="mb-3">
                  <label for="issueDate" class="form-label">Data de Emissão</label>
                  <input type="text" class="form-control" id="issueDate" name="issueDate" placeholder="DD/MM/AAAA" required inputmode="numeric">
                </div>
              </div>
            </div>

            <!-- Seção Origem -->
            <div class="card shadow-lg mb-4">
              <div class="card-body p-4">
                <h4 class="fs-4 card-title fw-bold mb-4">Origem</h4>
                <!-- Nacionalidade -->
                <div class="mb-3">
                  <label for="nationality" class="form-label">Nacionalidade</label>
                  <select class="form-select" id="nationality" name="nationality" required>
                    <option selected value="Brasileira">Brasileira</option>
                    <!-- Adicionar outras nacionalidades se necessário -->
                  </select>
                </div>
                <!-- Naturalidade -->
                <div class="mb-3">
                  <label for="birthPlace" class="form-label">Naturalidade UF / Município</label>
                  <select class="form-select" id="birthPlace" name="birthPlace" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de UF e Município aqui -->
                  </select>
                </div>
              </div>
            </div>

            <!-- Seção Informações Pessoais -->
            <div class="card shadow-lg mb-4">
              <div class="card-body p-4">
                <h4 class="fs-4 card-title fw-bold mb-4">Informações Pessoais</h4>
                <!-- Sexo -->
                <div class="mb-3">
                  <label for="sex" class="form-label">Sexo</label>
                  <select class="form-select" id="sex" name="sex" required>
                    <option selected disabled value="">Escolher</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <!-- Adicionar outras opções se necessário -->
                  </select>
                </div>
                <!-- Cor/Raça -->
                <div class="mb-3">
                  <label for="race" class="form-label">Cor/Raça</label>
                  <select class="form-select" id="race" name="race" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de cor/raça aqui -->
                  </select>
                </div>
                <!-- Estado Civil -->
                <div class="mb-3">
                  <label for="maritalStatus" class="form-label">Estado Civil</label>
                  <select class="form-select" id="maritalStatus" name="maritalStatus" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de estado civil aqui -->
                  </select>
                </div>
                <!-- Nível de Escolaridade -->
                <div class="mb-3">
                  <label for="educationLevel" class="form-label">Nível de Escolaridade</label>
                  <select class="form-select" id="educationLevel" name="educationLevel" required>
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de nível de escolaridade aqui -->
                  </select>
                </div>
                <!-- Área de Formação -->
                <div class="mb-3">
                  <label for="studyArea" class="form-label">Área de formação</label>
                  <select class="form-select" id="studyArea" name="studyArea">
                    <option selected disabled value="">Escolher</option>
                    <!-- Adicionar opções de área de formação aqui -->
                  </select>
                </div>
                <!-- Membro Adventista do Sétimo Dia? -->
                <div class="mb-3">
                  <label for="seventhDayAdventist" class="form-label">Membro Adventista do Sétimo Dia?</label>
                  <div>
                    <input type="radio" id="adventistYes" name="seventhDayAdventist" value="Sim">
                    <label for="adventistYes">Sim</label>
                    <input type="radio" id="adventistNo" name="seventhDayAdventist" value="Não" checked>
                    <label for="adventistNo">Não</label>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-flex align-items-center mt-4">
              <button type="submit" class="btn btn-primary ms-auto">
                Cadastrar
              </button>
            </div>
            </form>
            <!-- @import "versao" -->
          </div>
        </div>
      </div>
    </section>

  </main>

  <!-- scripts -->
  <script src="js/bootstrap.js"></script>

  <script>
    // Add * after the label for every required input field
    const requiredFields = document.querySelectorAll('input[required]');
    requiredFields.forEach(field => {
      const label = document.querySelector(`label[for="${field.id}"]`);
      label.innerHTML += ' *';
    });
  </script>

</body>

</html>