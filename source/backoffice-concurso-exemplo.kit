                <script>
                  document.getElementById('existeTaxaDeIsncricao').addEventListener('change', function() {
                    var integracaoComOBanco = document.getElementById('integracaoComOBanco');
                    if (this.checked) {
                      integracaoComOBanco.style.display = 'block';
                    } else {
                      integracaoComOBanco.style.display = 'none';
                    }
                  });

                  // Initialize the form visibility based on the checkbox state
                  document.addEventListener('DOMContentLoaded', function() {
                    var integracaoComOBanco = document.getElementById('integracaoComOBanco');
                    var checkbox = document.getElementById('existeTaxaDeIsncricao');
                    integracaoComOBanco.style.display = checkbox.checked ? 'block' : 'none';
                  });
                </script>

