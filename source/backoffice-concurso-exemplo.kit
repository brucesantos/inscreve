    <div class="modal fade" id="modalCargo" aria-hidden="true" tabindex="-1">
      <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Cargo</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <!-- Nome do Cargo -->
              <div class="mb-3">
                <label for="cargoNome" class="form-label">Nome do Cargo</label>
                <input type="text" class="form-control" id="cargoNome" required>
              </div>
    
              <!-- Turno -->
              <div class="mb-3">
                <label for="turno" class="form-label">Turno</label>
                <select class="form-select" id="turno" required>
                  <option value="" selected disabled>Selecione o turno</option>
                  <option value="Manhã">Manhã</option>
                  <option value="Tarde">Tarde</option>
                  <option value="Noite">Noite</option>
                  <option value="Integral">Integral</option>
                </select>
              </div>
    
              <!-- Validação de Elegibilidade -->
              <div class="mb-3">
                <label class="form-label">Validação de Elegibilidade</label>
                <div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="validacaoElegibilidade" id="elegibilidadeSim" value="Sim">
                    <label class="form-check-label" for="elegibilidadeSim">Sim</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="validacaoElegibilidade" id="elegibilidadeNao" value="Não">
                    <label class="form-check-label" for="elegibilidadeNao">Não</label>
                  </div>
                </div>
              </div>
              <!-- Tipo de Validação de Elegibilidade -->
              <div class="mb-3" id="tipoValidacaoElegibilidade" style="display: none;">
                <label for="tipoValidacao" class="form-label">Tipo de Validação</label>
                <select class="form-select" id="tipoValidacao">
                  <option value="" selected disabled>Selecione o tipo de validação</option>
                  <option value="CPF">CPF</option>
                  <option value="Email">Email</option>
                  <option value="RG">RG</option>
                </select>
              </div>
    
              <script>
                document.querySelectorAll('input[name="validacaoElegibilidade"]').forEach((elem) => {
                  elem.addEventListener('change', function () {
                    var tipoValidacao = document.getElementById('tipoValidacaoElegibilidade');
                    if (this.value === 'Sim') {
                      tipoValidacao.style.display = 'block';
                    } else {
                      tipoValidacao.style.display = 'none';
                    }
                  });
                });

                // Initialize the form visibility based on the radio button state
                document.addEventListener('DOMContentLoaded', function () {
                  var tipoValidacao = document.getElementById('tipoValidacaoElegibilidade');
                  var elegibilidadeSim = document.getElementById('elegibilidadeSim');
                  tipoValidacao.style.display = elegibilidadeSim.checked ? 'block' : 'none';
                });
              </script>
    
              <!-- Remuneração -->
              <div class="mb-3">
                <label for="remuneracao" class="form-label">Remuneração</label>
                <div class="input-group">
                  <span class="input-group-text">R$</span>
                  <input type="number" class="form-control" id="remuneracao" placeholder="0,00" min="0" step="0.01" required>
                </div>
              </div>
    
              <!-- Vagas -->
              <div class="mb-3">
                <label for="vagas" class="form-label">Vagas</label>
                <input type="number" class="form-control" id="vagas" min="0" step="1" required>
              </div>
    
              <!-- Data da prova -->
              <h5 class="mt-5">Prova</h5>
    
              <!-- Data de Início -->
              <div class="mb-3">
                <label for="dataDaProva" class="form-label">Data</label>
                <input type="date" class="form-control" id="dataDaProva" required>
              </div>
    
              <!-- Hora de Início -->
              <div class="mb-3">
                <label for="horaFim" class="form-label">Hora</label>
                <input type="time" class="form-control" id="horaFim" required>
              </div>
    
              <!-- Taxa de inscrição -->
              <h5 class="mt-5">Taxa de inscrição</h5>
              <div class="mb-3">
                <label for="valorInscricao" class="form-label">Valor da Inscrição</label>
                <div class="input-group">
                  <span class="input-group-text">R$</span>
                  <input type="number" class="form-control" id="valorInscricao" placeholder="0,00" min="0" step="0.01" required>
                </div>
              </div>
              <div class="mb-3">
                <label for="dataVencimentoBoletoInscicaoCargo01" class="form-label">Data de Vencimento</label>
                <input type="date" class="form-control" id="dataVencimentoBoletoInscicaoCargo01" required>
              </div>
    
              <!-- Termo de Aceite -->
              <h5 class="mt-5 mb-2">Termos Legais</h5>
              <div class="form-group mb-3">
                <label for="termoAceite" class="mb-2">Termo de Aceite (até 1000 caracteres):</label>
                <div id="editor" class="form-control" style="height: 200px;"></div>
                <input type="hidden" id="termoAceite" name="termo_aceite">
                <small class="form-text text-muted">Você pode usar negrito, itálico e criar listas.</small>
              </div>
              <script>
                // Inicializa o Quill
                var quill = new Quill('#editor', {
                  theme: 'snow',
                  placeholder: 'Escreva o termo de aceite aqui...',
                  modules: {
                    toolbar: [
                      [{ 'header': [1, 2, false] }],
                      ['bold', 'italic', 'underline'],
                      ['link', 'blockquote', 'code-block'],
                      [{ 'list': 'ordered' }, { 'list': 'bullet' }]
                    ]
                  }
                });

                // Limitar o número de caracteres
                quill.on('text-change', function () {
                  var plainText = quill.getText();
                  if (plainText.length > 1000) {
                    quill.deleteText(1000, plainText.length);
                  }

                  // Atualizar o input hidden com o conteúdo HTML do editor
                  document.querySelector("#termoAceite").value = quill.root.innerHTML;
                });
              </script>
    
              <!-- Termo de Aceite -->
              <h5 class="mt-5 mb-2">Período de Divulgação</h5>
              <div class="mb-3">
                <label for="dataInicioDivulgacaoCCI" class="form-label">Início da Divulgação do CCI</label>
                <input type="datetime-local" class="form-control" id="dataInicioDivulgacaoCCI" required>
              </div>
              <div class="mb-3">
                <label for="dataFimDivulgacaoCCI" class="form-label">Fim da Divulgação do CCI</label>
                <input type="datetime-local" class="form-control" id="dataFimDivulgacaoCCI" required>
              </div>
    
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-primary">Salvar</button>
          </div>
        </div>
      </div>
      <script>
        $(function () {
          $('#dataDaProva, #dataVencimentoBoletoInscicaoCargo01').daterangepicker({
            singleDatePicker: true,
            locale: {
              format: 'DD/MM/YYYY'
            }
          });
        });
      </script>
    </div>

